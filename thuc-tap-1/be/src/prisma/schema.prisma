datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ========== ENUMS ==========
enum Role {
  USER
  ADMIN
}

enum AlertCondition {
  GT
  LT
}

// ========== MODELS ==========

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  role     Role   @default(USER)

  portfolios Portfolio[]
  alerts     Alert[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Portfolio {
  id   String @id @default(uuid())
  name String

  userId String
  user   User   @relation(fields: [userId], references: [id])

  assets PortfolioAsset[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id     String @id @default(uuid())
  symbol String @unique
  name   String

  assets PortfolioAsset[]
  prices TokenPrice[]
  alerts Alert[]

  createdAt DateTime @default(now())
}

model PortfolioAsset {
  id String @id @default(uuid())

  portfolioId String
  tokenId     String

  amount Float

  portfolio Portfolio @relation(fields: [portfolioId], references: [id])
  token     Token     @relation(fields: [tokenId], references: [id])

  histories AssetHistory[] @relation("AssetHistoryPortfolioAsset")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([portfolioId, tokenId])
}

model TokenPrice {
  id    String @id @default(uuid())
  price Float

  tokenId String
  token   Token  @relation(fields: [tokenId], references: [id])

  createdAt DateTime @default(now())
}

model Alert {
  id          String         @id @default(uuid())
  condition   AlertCondition
  targetPrice Float
  isTriggered Boolean        @default(false)

  userId  String
  tokenId String

  user  User  @relation(fields: [userId], references: [id])
  token Token @relation(fields: [tokenId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AssetHistory {
  id          String   @id @default(uuid())
  assetId     String
  portfolioId String
  tokenId     String
  oldAmount   Float
  newAmount   Float
  createdAt   DateTime @default(now())

  asset PortfolioAsset @relation("AssetHistoryPortfolioAsset", fields: [assetId], references: [id])
}